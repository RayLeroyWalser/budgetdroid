

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@color/gray">
    
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="433dp"
      android:background="@color/gray"
      android:orientation="vertical"
      android:paddingBottom="@dimen/activity_vertical_margin"
      android:paddingLeft="@dimen/activity_horizontal_margin"
      android:paddingRight="@dimen/activity_horizontal_margin"
      android:paddingTop="@dimen/activity_vertical_margin"
      tools:context="com.equiplexdevelopers.budgetdroid.Main$PlaceholderFragment" >

      <TextView
          android:id="@+id/month"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginTop="15dp"
          android:background="@color/green"
          android:text="Month:"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/aincome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/stats"
          android:layout_alignRight="@+id/stats"
          android:layout_below="@+id/stats"
          android:layout_marginTop="16dp"
          android:background="@color/white"
          android:text="TextView"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/mincome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignRight="@+id/month"
          android:layout_below="@+id/month"
          android:layout_marginTop="24dp"
          android:background="@color/white"
          android:text="TextView"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/mexpense"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/mincome"
          android:layout_alignRight="@+id/mincome"
          android:layout_below="@+id/mincome"
          android:layout_marginTop="20dp"
          android:background="@color/white"
          android:text="TextView"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/msavings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/mexpense"
          android:layout_alignRight="@+id/mexpense"
          android:layout_below="@+id/mexpense"
          android:layout_marginTop="22dp"
          android:background="@color/white"
          android:text="TextView"
          android:textAppearance="?android:attr/textAppearanceLarge" />

      <TextView
          android:id="@+id/stats"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/msavings"
          android:layout_below="@+id/msavings"
          android:layout_marginTop="20dp"
          android:background="@color/green"
          android:text="Statistics"
          android:textAppearance="?android:attr/textAppearanceLarge"
          android:textColor="@color/white" />

      <TextView
          android:id="@+id/aexpenses"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignLeft="@+id/aincome"
          android:layout_alignRight="@+id/aincome"
          android:layout_below="@+id/aincome"
          android:layout_marginTop="23dp"
          android:background="@color/white"
          android:text="TextView"
          android:textAppearance="?android:attr/textAppearanceLarge" />

  </RelativeLayout>

</ScrollView>
